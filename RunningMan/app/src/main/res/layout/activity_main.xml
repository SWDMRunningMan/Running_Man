<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/run"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter room name"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="#aaffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/searchRoomName"
                android:layout_weight="5"
                android:singleLine="true"
                android:lines="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:text=" Search"
                android:id="@+id/searchBtn"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/search"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room List"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="10"
            android:background="#aaffffff">
            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:background="#44000000"
                android:padding="2dp">
                <TableRow
                    android:background="#aaffffff">
                    <TextView
                        android:layout_height="30dp"
                        android:text="방 번호"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:layout_margin="1dp"
                        android:gravity="center"/>
                    <TextView android:text="방 제목"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:layout_height="30dp"
                        android:layout_margin="1dp"
                        android:gravity="center"/>
                    <TextView android:text="방 인원수"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:layout_height="30dp"
                        android:layout_margin="1dp"
                        android:gravity="center"/>
                </TableRow>
                <View
                    android:background="#44000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />
               <TableRow
                    android:background="#aaffffff">
                    <TextView
                        android:text="1"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:layout_margin="1dp"
                        android:layout_height="30dp"
                        android:gravity="center"/>
                    <TextView android:text="런닝맨"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:layout_margin="1dp"
                        android:layout_height="30dp"
                        android:gravity="center"/>
                    <TextView android:text="4/8"
                        android:textColor="#ff000000"
                        android:textStyle="bold"
                        android:layout_height="30dp"
                        android:layout_margin="1dp"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomMakeBtn"
                android:text="방만들기"
                android:textSize="20dp"
                android:background="#00ffffff"
                android:textStyle="bold"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomEnterBtn"
                android:text="방 접속하기"
                android:textSize="20dp"
                android:background="#00ffffff"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>