<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yea2.runningman.MakeRoom"
    android:background="#ffffff44">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:text="make room" />
    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#ffffffff" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_weight="3"
                android:text="Room Name "
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
               />
            <EditText
                android:id="@+id/roomNameText"
                android:hint="Enter room name"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Seeker Numbers "
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/seekerNum"
                android:hint="Enter number of seekers"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp"    />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Time Limit "
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/timeLimit"
                android:hint="Enter Time Limit"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp"    />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Chance Numbers: "
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/chanceNum"
                android:hint="Enter number of chances"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_margin="10dp"    />
        </TableRow>
    </TableLayout>
    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#ffffffff" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_weight="1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Room"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:id="@+id/makeRoom"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="5dp"
    android:id="@+id/Cancel"/>
</LinearLayout>

</LinearLayout>
